# vim: set fenc=utf-8 ft=dosini:

[file-build]
command:c=gcc "$(VIM_FILEPATH)" -Wall -g -o "$(VIM_FILEDIR)/$(VIM_FILENOEXT)"
command:cpp=g++ "$(VIM_FILEPATH)" -Wall -g -o "$(VIM_FILEDIR)/$(VIM_FILENOEXT)"
command:go=go build -o "$(VIM_PATHNOEXT)" "$(VIM_FILEPATH)"
command:rust=cargo build
cwd=$(VIM_ROOT)
output=terminal
save=1

[file-run]
command="$(VIM_FILEPATH)"
command:c,cpp,go="$(VIM_PATHNOEXT)"
command:rust=cargo run
command:python=python "$(VIM_FILENAME)"
command:javascript=node "$(VIM_FILENAME)"
command:sh=sh "$(VIM_FILENAME)"
command:lua=lua "$(VIM_FILENAME)"
command:perl=perl "$(VIM_FILENAME)"
command:ruby=ruby "$(VIM_FILENAME)"
output=terminal
cwd=$(VIM_ROOT)
save=1

[cmake-init]
command=mkdir -p build && cmake -S . -B build
cwd=$(VIM_ROOT)
output=terminal
save=2

[cmake-build]
command=cmake --build build
cwd=$(VIM_ROOT)
output=terminal
save=2

[cmake-clean]
command=rm -rf "$(VIM_ROOT)"/build
output=terminal

[cmake-run]
command="./$(?executable)"
cwd=$(VIM_ROOT)/build
output=terminal

[make-build]
command=make
cwd=$(VIM_ROOT)
output=terminal
save=2

[make-clean]
command=make clean
cwd=$(VIM_ROOT)
output=terminal

# [compile-commands]

[ctags]
command=ctags -R -f tags --languages=C,C++,Rust,Python,Go,Java,JavaScript,Sh .
cwd=$(VIM_ROOT)
output=terminal
